@model BookStore.ViewModels.AuthorViewModel

@{
    ViewBag.Title = "Details";
}
<a asp-action="Index"> Back to List </a>

<div class="list-group">
    <div class="row">
        <div class="col-md-12 detail-div">
            <h3> @Html.DisplayFor(modelItem => Model.Name) </h3>
            <dl>
                <dt> AuthorId </dt>
                <dd> @Model.AuthorId </dd>
                <dt> AuthorName </dt>
                <dd> @Model.Name </dd>
                <dt> DateOfBIrth</dt>
                <dd> @Model.DateOfBirth </dd>
                <dt> Books </dt>
                @foreach(var item in Model.Books)
                {
                    <dd> @Html.DisplayFor(modelItem=> item.BookTitle) </dd>
                }
            </dl>
        </div>
    </div>
</div>
