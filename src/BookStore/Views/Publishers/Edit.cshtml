@model BookStore.Models.Publisher

@{
    ViewBag.Title = "Update Publisher";
}

<form asp-controller="Publishers" asp-action="Edit" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"> Name </label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <div class="col-md-10">
                @Html.TextBox("Name", null, new { @class="form-control" })
                @Html.HiddenFor(model => model.PublisherId)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default"/>
                <a asp-action="Index"> Cancel </a>
            </div>
        </div>
    </div>
</form>
